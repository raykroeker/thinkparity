<?xml version="1.0"?>
<assembly>
	<id>image</id>

	<formats>
		<format>zip</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
        <!-- / -->
        <fileSet>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>README.txt</include>
				<include>LICENSE.txt</include>
			</includes>
		</fileSet>
        <fileSet>
            <outputDirectory>/</outputDirectory>
            <directory>target/classes</directory>
            <includes>
                <include>thinkParityImage.properties</include>
            </includes>
        </fileSet>

        <!-- /lib/win32 -->
        <fileSet>
            <outputDirectory>/lib/win32</outputDirectory>
            <directory>src/main/lib/win32</directory>
            <includes>
                <include>*.dll</include>
            </includes>
        </fileSet>
    </fileSets>

	<dependencySets>
        <!-- /core -->
		<dependencySet>
			<outputDirectory>/core</outputDirectory>
			<scope>runtime</scope>
			<includes>
                <include>${pom.groupId}:${artifactId}</include>
				<include>${pom.groupId}:codebase</include>
				<include>${pom.groupId}:cMigrator</include>
				<include>${pom.groupId}:lModel</include>
			</includes>
		</dependencySet>
        <!-- /lib -->
		<dependencySet>
			<outputDirectory>/lib</outputDirectory>
			<scope>runtime</scope>
			<excludes>
                <exclude>${pom.groupId}:${artifactId}</exclude>
				<exclude>${pom.groupId}:codebase</exclude>
				<exclude>${pom.groupId}:cMigrator</exclude>
				<exclude>${pom.groupId}:lModel</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>
