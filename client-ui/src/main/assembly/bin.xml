<?xml version="1.0"?>
<assembly>
	<id>bin</id>

	<formats>
		<format>dir</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
        <!-- thinkParity:  Platform -->
        <!-- / -->
        <fileSet>
			<outputDirectory>/${artifactId}-${version}</outputDirectory>
			<includes>
				<include>README.txt</include>
				<include>LICENSE.txt</include>
			</includes>
        </fileSet>
        <fileSet>
            <outputDirectory>/${artifactId}-${version}</outputDirectory>
            <directory>target/classes/bin</directory>
            <includes>
                <include>thinkParity.exe</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>/${artifactId}-${version}</outputDirectory>
            <directory>target/classes</directory>
            <includes>
                <include>thinkParity.properties</include>
            </includes>
        </fileSet>

        <!-- thinkParity:  Image -->
        <!-- /${version} -->
        <fileSet>
            <outputDirectory>/${artifactId}-${version}/${version}</outputDirectory>
            <directory>target/classes</directory>
            <includes>
                <include>thinkParityImage.properties</include>
            </includes>
        </fileSet>
        <!-- /${version}/lib/win32 -->
        <fileSet>
            <outputDirectory>/${artifactId}-${version}/${version}/lib/win32</outputDirectory>
            <directory>src/main/lib/win32</directory>
            <includes>
                <include>*.dll</include>
            </includes>
        </fileSet>

    </fileSets>
	<dependencySets>
        <!-- thinkParity:  Platform -->
        <!-- / -->
		<dependencySet>
			<outputDirectory>/${artifactId}-${version}</outputDirectory>
			<scope>runtime</scope>
			<includes>
                <include>${pom.groupId}:thinkParity</include>
			</includes>
            <outputFileNameMapping>thinkParity.jar</outputFileNameMapping>
		</dependencySet>

        <!-- thinkParity:  Image -->
        <!-- /${version}/core -->
		<dependencySet>
			<outputDirectory>/${artifactId}-${version}/${version}/core</outputDirectory>
			<scope>runtime</scope>
			<includes>
                <include>${pom.groupId}:${pom.artifactId}</include>
				<include>${pom.groupId}:codebase</include>
				<include>${pom.groupId}:cMigrator</include>
				<include>${pom.groupId}:lModel</include>
			</includes>
		</dependencySet>
        <!-- /${version}/lib -->
		<dependencySet>
			<outputDirectory>/${artifactId}-${version}/${version}/lib</outputDirectory>
			<scope>runtime</scope>
			<excludes>
                <exclude>${pom.groupId}:${pom.artifactId}</exclude>
				<exclude>${pom.groupId}:codebase</exclude>
				<exclude>${pom.groupId}:cMigrator</exclude>
				<exclude>${pom.groupId}:lModel</exclude>
				<exclude>${pom.groupId}:thinkParity</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>
