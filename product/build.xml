<?xml version="1.0"?>
<project name="thinkParity" default="help" basedir=".">
    <property name="build.sysclasspath" value="ignore"/>

    <!-- build configuration -->
    <tstamp>
        <format property="build.id" pattern="yyyy-MM-dd HH:mm:ss Z" timezone="PST"/>
    </tstamp>

    <!-- notification distribution lists -->
    <property name="notify.from" value="thinkparity.development@gmail.com"/>

    <!-- print help -->
    <target name="help">
        <echo>
Options:
    -Dnotify.to             Notification to list.   (comma separated)
    -Dnotify.cc             Notification cc list.   (comma separated)
    -Dnotify.bcc            Notification bcc list.  (comma separated)
    -Dnotify.subject        Notification subject.
    -Dnotify.message        Notification message.

Targets:
    notify

Examples:
        </echo>
    </target>

    <target name="notify">
        <mail mailhost="tpdev.thinkparity.com" from="${notify.from}"
                tolist="${notify.to}" cclist="${notify.cc}"
                bcclist="${notify.bcc}"
                subject="${notify.subject}" message="${notify.message}"/>
    </target>
</project>
